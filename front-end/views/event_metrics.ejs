<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Brackets Analytics Dashboard</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet"> 
    
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
    <link href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css' rel='stylesheet'>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a href="index.html" class="navbar-brand mx-4 mb-3">
                    <h5 class="text-primary"><i class="fa fa-chart-bar me-2"></i>Brackets Analytics</h5>
                </a>
                <div class="navbar-nav w-100">
                    <a href="/" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>User Metrics</a>
                    <a href="/map" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>User Distribution</a>
                    <a href="/event_metrics" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Event Metrics</a>
                    <a href="/predictions" class="nav-item nav-link"><i class="fa fa-chart-line me-2"></i>Prediction</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
            </nav>
            <!-- Navbar End -->

            <div class = "container-fluid pt-4 px-4">
                <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                    <div class="navbar-brand d-flex align-items-center justify-content-between py-4">
                        <i class="fa fa-chart-line fa-2x text-primary"></i>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="">
                                <h6 class="mb-0">Start Date:</h6>
                                <div class="form-group">
                                    <div class="input-group date" id="startdate" data-target-input="nearest">
                                        <input type="text" id = "metrics-start-date" class="form-control datetimepicker-input"/>
                                        <div class="input-group-text bg-secondary"><i class="text-primary fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="">
                                <h6 class="mb-0">End Date:</h6>
                                <div class="form-group">
                                    <div class="input-group date" id="enddate" data-target-input="nearest">
                                        <input type="text" id = "metrics-end-date" class="form-control datetimepicker-input"/>
                                        <div class="input-group-text bg-secondary"><i class="text-primary fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>


            <!-- Metrics Chart Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h5 class="mb-0">Top Programming Languages</h5>
                                <!---Dropdown-->
                                <div class="dropdown" id="languages-dropdown">
                                    <span id = "languages-span">Country</span>
                                    <label>
                                      <input type="checkbox">
                                      <ul id = "languages-ul">
                                        <li val="United States">United States</li>
                                        <li val="India">India</li>
                                        <li val="Japan">Japan</li>
                                        <li val="Russia">Russia</li>
                                        <li val="South Korea">South Korea</li>
                                        <li val="Germany">Germany</li>
                                        <li val="United Kingdom">United Kingdom</li>
                                        <li val="France">France</li>
                                        <li val="Mexico">Mexico</li>
                                        <li val="Poland">Poland</li>
                                        <li val="Spain">Spain</li>
                                        <li val="Brazil">Brazil</li>
                                        <li val="Canada">Canada</li>
                                        <li val="Italy">Italy</li>
                                        <li val="Philippines">Philippines</li>
                                      </ul>
                                    </label>
                                  </div>
                            </div>
                            <canvas id="top-programming-languages"></canvas>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h5 class="mb-0">Event Type Metrics</h5>
                                <!---Dropdown-->
                                <div class="dropdown" id="event-metrics-dropdown">
                                    <span id = "event-metrics-span">Country</span>
                                    <label>
                                      <input type="checkbox">
                                      <ul id = "event-metrics-ul">
                                        <li val="United States">United States</li>
                                        <li val="India">India</li>
                                        <li val="Japan">Japan</li>
                                        <li val="Russia">Russia</li>
                                        <li val="South Korea">South Korea</li>
                                        <li val="Germany">Germany</li>
                                        <li val="United Kingdom">United Kingdom</li>
                                        <li val="France">France</li>
                                        <li val="Mexico">Mexico</li>
                                        <li val="Poland">Poland</li>
                                        <li val="Spain">Spain</li>
                                        <li val="Brazil">Brazil</li>
                                        <li val="Canada">Canada</li>
                                        <li val="Italy">Italy</li>
                                        <li val="Philippines">Philippines</li>
                                      </ul>
                                    </label>
                                  </div>
                            </div>
                            <canvas id="user-action-metrics"></canvas>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary text-center rounded p-4">
                            <div class="d-flex align-items-center justify-content-between mb-4">
                                <h5 class="mb-0">Top Countries Using Live Preview</h5>
                            </div>
                            <canvas id="countries-live-preview"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Metrics Chart End -->

            <!-- Footer Start -->
            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                             Designed By <a href="https://github.sfu.ca/tjd10/T.U.B.A">Team T.U.B.A</a>
                            <br>For CMPT 732 Final Project</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
            <!-- Footer End -->
        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    

    <!-- Template Javascript -->
    <script src="js/event_metrics.js"></script>
</body>

</html>